<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubUser" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/prussian_blue</item>
        <item name="colorPrimaryVariant">@color/prussian_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cornflower_light</item>
        <item name="colorSecondaryVariant">@color/cornflower_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Text">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Number">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.AppName">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Value">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Value.Medium">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Text.Value.Medium.Big">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Value.Medium.Small">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Value.Regular">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Text.Value.Regular.Detail">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchView" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HelperLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

</resources>